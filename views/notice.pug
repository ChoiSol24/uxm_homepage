block headtitle
  h2 Notice
block content
    

    .wrapper
        main.container
          section.content
            table.n_content
              thead
               
                -for (var i=notice.length-1; i>0; i--)
                  tr(onclick=`${notice[i].views++}`)
                    th= i
                    th
                      a(href="/notice/show/"+notice[i]._id)= notice[i].title
                    th= `${notice[i].date.getYear()+1900}-${notice[i].date.getMonth()+1}-${notice[i].date.getDate()}`
                    th= notice[i].writer
                    th= notice[i].views
                
              
          
          section.paging
            br
            button.n_writebtn(onclick="location.href='/notice/write'") 글쓰기
