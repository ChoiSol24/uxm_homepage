extends layout

block content
    style.
        .pagination {
        list-style-type : none;
        padding:0;
        margin :0 auto;
        text-align:center;
        }
        .pagination > li{
        display : inline;
        }
    
    .wrapper
      
      #main.container
        // Content
        article#content
            #main.container
            header.memberTitle
              h2= title
            table.table.table-striped(style="font-size:10px;text-align:center; ")
              thead(style="border-bottom: 1px solid gray;border-top: 1px solid gray")
                tr
                  th(width="3%")
                  th(width="50%") 제목
                  th(width="14%") 작성일
                  th(width="14%") 작성자
                  th(width="12%") 조회수
                  th(width="7%") 첨부
              tbody
                -for (var i=0; i<notice.length; i++)
                  tr
                    td= i+1
                    td
                      a(href="/notice/show/"+notice[i]._id)= notice[i].title
                    td= `${notice[i].date.getYear()+1900}-${notice[i].date.getMonth()+1}-${notice[i].date.getDay()+6}`
                    td= notice[i].writer
                    td 102
                    td O
                  
                
                                               
            ul.pagination
              li
                a(href="#") prev
              li
                a(href="#") 1
              li
                a(href="#") 2
              li
                a(href="#") 3
              li
                a(href="#") 4
              li
                a(href="#") 5
              li
                a(href="#") next

            button.btn(onclick="location.href='/notice/write'") 글쓰기

