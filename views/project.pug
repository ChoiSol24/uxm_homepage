extends layout
block headtitle
  h2 Project
block content
  .wrapper
    main.container
      nav.pub_sub_menu
        ul
          li.on(href="#") 국책과제
          li 산학과제
          li 내부과제
      
      section.content
        table.p_content
          thead
            tr
              th Korean Title
              th English Title
              th Date
          tbody
            each pro in project
              - if (pro.category == 'national')
                tr.pub_tr1
                  td= pro.kr
                  td= pro.eng
                  td= `[${pro.date_start.getFullYear()}.${pro.date_start.getMonth()+1}~${pro.date_end.getFullYear()}.${pro.date_end.getMonth()+1}]`
              - if (pro.category == 'industrial')
                tr.pub_tr2
                  td= pro.kr
                  td= pro.eng
                  td= `[${pro.date_start.getFullYear()}.${pro.date_start.getMonth()+1}~${pro.date_end.getFullYear()}.${pro.date_end.getMonth()+1}]`
              - if (pro.category == 'internal')
                tr.pub_tr3
                  td= pro.kr
                  td= pro.eng
                  td= `[${pro.date_start.getFullYear()}.${pro.date_start.getMonth()+1}~${pro.date_end.getFullYear()}.${pro.date_end.getMonth()+1}]`
              //- tr
              //-   td= pro.kr
              //-   td= pro.eng
              //-   td= `[${pro.date_start.getFullYear()}.${pro.date_start.getMonth()+1}~${pro.date_end.getFullYear()}.${pro.date_end.getMonth()+1}]`  
    if currentUser
      section.btn_box.admin
        button.btn(onclick="location.href='/project/update'") 과제 업로드