extends layout
block headtitle
  h2 Project
block content
  .wrapper
    main.container
      nav.sub_menu
        ul
          li
            a.on(href="#") 국책과제
          li
            a(href="#") 산학과제
          li
            a(href="#") 내부과제
      section.content
        table.p_content
          //- thead
          //-   tr
          //-     th 국문과제명
          //-     th 영문과제명
          //-     th 과제 수행 기간
          tbody
            each pro in project
              tr
                td= pro.kr
                td= pro.eng
                td= `[${pro.date_start.getFullYear()}.${pro.date_start.getMonth()}~${pro.date_end.getFullYear()}.${pro.date_end.getMonth()}]`
            
          
        button.btn(onclick="location.href='/project/update'") 과제 업로드